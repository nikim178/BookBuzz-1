<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bookbuzz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookBuzz">
        <activity android:name=".Introduction"
                  android:theme="@style/Theme.BookBuzz.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.Select_Genre2"
            android:theme="@style/Theme.BookBuzz.NoActionBar"/>
        <activity
            android:name=".UserRegistration2"
            android:theme="@style/Theme.BookBuzz.NoActionBar" />
        <activity
            android:name=".UserLogin2"
            android:theme="@style/Theme.BookBuzz.NoActionBar" />
        <activity android:name=".Settings" />
        <activity
            android:name=".Friend_Message"
            android:theme="@style/Theme.BookBuzz.NoActionBar"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".HomeActivity"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".model.ChatActivity"
            android:theme="@style/Theme.BookBuzz.NoActionBar"/>
        <activity
            android:name=".PendingRequest"
            android:theme="@style/Theme.BookBuzz.NoActionBar"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".Wishlist"/>
        <activity
            android:name=".Booklist"/>
        <activity
            android:name=".SearchUsers"
            android:label="Search Users"
            android:theme="@style/Theme.BookBuzz.NoActionBar" />
        <activity
            android:name=".SwipeGenre"
            android:theme="@style/Theme.BookBuzz.NoActionBar"
            android:parentActivityName=".ui.Select_Genre2" />
        <activity
            android:name=".Transformationac"
            android:label="Introduction" />
        <activity android:name=".Startpage" />
        <activity
            android:name=".SearchBook"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".EditProfile"
            android:parentActivityName=".Profile" />
        <activity
            android:name=".Profile"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".Help"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".Home" />
        <activity android:name=".UserLogin" />
        <activity android:name=".UserRegistration" />
        <activity android:name=".MainActivity">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>