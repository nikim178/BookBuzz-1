        android:configChanges="orientation|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookBuzz">
        <activity android:name=".UserRegistration2"
            android:theme="@style/Theme.BookBuzz.NoActionBar"></activity>
        <activity android:name=".UserLogin2"
            android:theme="@style/Theme.BookBuzz.NoActionBar"/>
        <activity android:name=".Settings" />
        <activity android:name=".Friend_Message" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".model.ChatActivity" />
        <activity android:name=".PendingRequest" />
        <activity android:name=".Wishlist" />
        <activity android:name=".Booklist" />
        <activity android:name=".SearchUsers" android:label="Search Users" />
        <activity
            android:name=".SelectGenre"
            tools:ignore="MissingClass" />
        <activity android:name=".SwipeGenre" />
        <activity
            android:name=".Transformationac"
            android:label="Introduction" />
        <activity android:name=".Startpage" />
        <activity android:name=".SearchBook" />
        <activity android:name=".EditProfile" />
        <activity android:name=".Profile" />
        <activity android:name=".Help" />
        <activity android:name=".Home" />
        <activity android:name=".UserLogin" />
        <activity android:name=".UserRegistration" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>