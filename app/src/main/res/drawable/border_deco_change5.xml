<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true"
        >
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/khaki"/>
                    <corners android:radius="18dp"/>
                    <stroke android:color="@color/khaki" android:width="1dp"/>
                    <size
                        android:height="110dp"
                        android:width="110dp"/>
                </shape>
            </item>
            <item
                android:width="45dp"
                android:height="45dp"
                android:top="30dp"
                android:left="31dp"
                android:right="28dp"
                android:bottom="25dp"
                android:drawable="@drawable/spyyy">

            </item>
        </layer-list>
    </item>
</selector>