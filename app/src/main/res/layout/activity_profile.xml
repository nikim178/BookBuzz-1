<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/gradientbackground"
        android:orientation="vertical"
        android:paddingTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iview3"
            android:layout_width="163dp"
            android:layout_height="153dp"
            android:layout_marginStart="120dp"
            android:contentDescription="TODO"
            app:civ_border_width="2dp"

            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/TextView6"
            android:layout_width="240dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:elevation="6dp"
            android:fontFamily="@font/bungee"
            android:paddingHorizontal="13dp"
            android:paddingVertical="13dp"
            android:text="@string/name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="316dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#BCB5BD"
        android:contentDescription="@string/edit_text"
        android:tint="#0B0A0A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/TextView5"
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/round"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:padding="13dp"
        android:paddingLeft="10dp"
        android:text="@string/email"
        android:textStyle="bold"

        app:drawableLeftCompat="@drawable/ic_baseline_email_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/round"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:padding="13dp"
        android:paddingLeft="10dp"
        android:text="@string/zipcode"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_baseline_home_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView7" />

    <TextView
        android:id="@+id/TextView8"
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="310dp"
        android:background="@drawable/round"
        android:drawablePadding="10dp"
        android:paddingHorizontal="13dp"
        android:paddingVertical="13dp"
        android:text="@string/biography"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_baseline_event_note_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <TextView
        android:id="@+id/TextView7"
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/round"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:padding="13dp"
        android:paddingLeft="10dp"
        android:text="@string/location"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_baseline_location_on_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView5" />

</androidx.constraintlayout.widget.ConstraintLayout>